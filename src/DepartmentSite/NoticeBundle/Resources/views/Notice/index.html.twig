{% extends 'base.html.twig' %}


  {% block body %}

<div ng-controller="NoticesCtrl">
      <script type="text/javascript">
           data = "{{ render(controller('DepartmentSiteNoticeBundle:Notice:getAll', { 'pagination' : pagination })) }}";
      </script>

      <div class="announcements-background">
      <div class="container">
          <div class="row">
              <div class="col-xs-12">
                  <div class="section-title"><span>{{ 'notice' | DICTIONARY(_locale) }}</span></div>
              </div>
          </div>
          <div class="row" ng-repeat="notice in notices  ">
              <div class="cards-column">
                  <div class="announce-card">
                      <div class="announce-card-content">
                          <div class="full-card-content">
                              <div class="my_announcement-comments-count-circle pull-right">2</div>
                              <i class="announce-card-date">{{'{{notice.created_at.date | dateFilter | date:"dd.MM.yyyy"}}'}}</i>


                              <br /><a class="announce-card-title" ng-href="/{{ _locale }}/notice/{{'{{notice.slug}}'}}/show">{{'{{ notice.title }}'}}</a>
                              <div class="announce-card-lead">{{'{{ notice.description }}'}}</div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>

  </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination, ':layout:pagination.html.twig') }}
    </div>
  </div>
  {% endblock %}
